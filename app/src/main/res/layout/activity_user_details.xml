<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserManager.UserDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="25dp"
        android:id="@+id/imagenPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/schoolbus"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/camera"
        android:contentDescription="@string/btnCambiarImagen" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/user"
            android:contentDescription="@string/iconoUsuario" />
        <TextView
            android:id="@+id/txtUsuarioDetalles"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:text="@string/lblSample"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/email"
            android:contentDescription="@string/iconoCorreo" />
        <TextView
            android:id="@+id/txtCorreoDetalles"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:text="@string/lblSample"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/padlock"
            android:contentDescription="@string/iconoContraseña" />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:text="@string/lblContraseña"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>