<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp">
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piggybank"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/CodigoAbono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="CRED-00000"
        tools:text="Codigo Abono"/>

    <TextView
        android:id="@+id/CodigoCredito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/CodigoAbono"
        android:layout_below="@id/CodigoAbono"
        android:text="Monto"
        tools:text="Codigo Credito"
        />
    <TextView
        android:id="@+id/FechaAbono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CodigoAbono"
        android:layout_below="@+id/CodigoCredito"
        android:text="Fecha"
        tools:text="Fecha de Abono" />
    <TextView
        android:id="@+id/MontoAbono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CodigoAbono"
        android:layout_below="@+id/FechaAbono"
        android:text="Resto"
        tools:text="Monto total" />

</RelativeLayout>